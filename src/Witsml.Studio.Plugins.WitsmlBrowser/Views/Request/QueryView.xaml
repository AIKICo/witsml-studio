<UserControl x:Class="PDS.Witsml.Studio.Plugins.WitsmlBrowser.Views.Request.QueryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PDS.Witsml.Studio.Plugins.WitsmlBrowser.Views.Request"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:app="clr-namespace:PDS.Witsml.Studio.Behaviors;assembly=PDS.Witsml.Studio"
             xmlns:conv="clr-namespace:PDS.Witsml.Studio.Converters;assembly=PDS.Witsml.Studio"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <conv:NullToBooleanConverter x:Key="NullToBooleanConverter" />
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <avalon:TextEditor 
            Document="{Binding Model.XmlQuery, Mode=TwoWay}" Padding="5,5,5,0" SyntaxHighlighting="XML" FontFamily="Consolas" FontSize="10pt">
        </avalon:TextEditor>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Width="80" Margin="5,5,0,5" IsEnabled="{Binding Model.WitsmlVersion, Converter={StaticResource NullToBooleanConverter}}" >
                <i:Interaction.Behaviors>
                    <app:DropDownButtonBehavior />
                </i:Interaction.Behaviors>
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <TextBox IsReadOnly="True" Cursor="Arrow" Focusable="False" BorderThickness="0" Background="Transparent" Text="Execute" IsEnabled="{Binding Model.WitsmlVersion, Converter={StaticResource NullToBooleanConverter}}" />
                        <Path Margin="2" VerticalAlignment="Center" Width="6" Fill="#FF527DB5" Stretch="Uniform"
				  Data="F1 M 301.14,-189.041L 311.57,-189.041L 306.355,-182.942L 301.14,-189.041 Z " HorizontalAlignment="Right"/>
                    </StackPanel>
                </Button.Content>
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem cal:Message.Attach="GetFromStore" Header="Get" />
                        <MenuItem cal:Message.Attach="AddToStore" Header="Add" />
                        <MenuItem cal:Message.Attach="UpdateInStore" Header="Update" />
                        <MenuItem cal:Message.Attach="DeleteFromStore" Header="Delete" />
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
            <Button x:Name="SaveQuery" Content="Save" Width="80" Margin="5,5,0,5" IsEnabled="{Binding Model.WitsmlVersion, Converter={StaticResource NullToBooleanConverter}}" />
            <Button x:Name="OpenQuery" Content="Open" Width="80" Margin="5,5,0,5" IsEnabled="{Binding Model.WitsmlVersion, Converter={StaticResource NullToBooleanConverter}}" />
        </StackPanel>
    </Grid>
</UserControl>
