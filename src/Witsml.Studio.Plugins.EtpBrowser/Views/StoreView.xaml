<UserControl x:Class="PDS.Witsml.Studio.Plugins.EtpBrowser.Views.StoreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:app="clr-namespace:PDS.Witsml.Studio.Core.Behaviors;assembly=PDS.Witsml.Studio.Core"
             xmlns:conv="clr-namespace:PDS.Witsml.Studio.Core.Converters;assembly=PDS.Witsml.Studio.Core"
             mc:Ignorable="d" d:DesignHeight="400" d:DesignWidth="300">
    
    <UserControl.Resources>
        <conv:NullToBooleanConverter x:Key="NullToBooleanConverter" />
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Text="URI:" Margin="10,5,5,5" HorizontalAlignment="Right" VerticalAlignment="Center" />
        <TextBox Text="{Binding Model.Store.Uri, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Margin="5" Padding="5" VerticalContentAlignment="Center" />

        <TextBlock Grid.Column="0" Grid.Row="1" Text="UUID:" Margin="10,5,5,5" HorizontalAlignment="Right" VerticalAlignment="Center" />
        <TextBox Text="{Binding Model.Store.Uuid}" Grid.Column="1" Grid.Row="1" Margin="5" Padding="5" VerticalContentAlignment="Center" />
        <Button x:Name="NewUuid" Grid.Column="2" Grid.Row="1" Margin="5" Content="New" Width="40" HorizontalAlignment="Right" />

        <TextBlock Grid.Column="0" Grid.Row="2" Text="Name:" Margin="10,5,5,5" HorizontalAlignment="Right" VerticalAlignment="Center" />
        <TextBox Text="{Binding Model.Store.Name, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Margin="5" Padding="5" VerticalContentAlignment="Center" />

        <TextBlock Grid.Column="0" Grid.Row="3" Text="Content Type:" Margin="10,5,5,5" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <TextBox Text="{Binding Model.Store.ContentType}" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Margin="5" Padding="5" VerticalContentAlignment="Center" />

        <TextBlock Grid.Column="0" Grid.Row="4" Text="Input:" Margin="10,5,5,5" HorizontalAlignment="Left" VerticalAlignment="Center" />
        
        <Border Grid.Row="5" Grid.ColumnSpan="3" Margin="5" BorderThickness="1" BorderBrush="#FFABADB3">
            <ContentControl x:Name="Data" />
        </Border>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="3" Margin="5,0,5,5" Orientation="Horizontal" IsEnabled="{Binding CanExecute}">
            <Button x:Name="GetObject" Content="Get Object" IsEnabled="{Binding Model.Store.Uri, Converter={StaticResource NullToBooleanConverter}}" Margin="0,0,5,0" Width="90" />
            <Button x:Name="PutObject" Content="Put Object" IsEnabled="{Binding Model.Store.Name, Converter={StaticResource NullToBooleanConverter}}" Margin="0,0,5,0" Width="90" />
            <Button x:Name="DeleteObject" Content="Delete Object" IsEnabled="{Binding Model.Store.Uri, Converter={StaticResource NullToBooleanConverter}}" Margin="0,0,5,0" Width="90" />
        </StackPanel>

    </Grid>
</UserControl>
